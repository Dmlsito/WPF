<Window x:Class="WPFSimulacroMinis.Ejercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSimulacroMinis"
        mc:Ignorable="d"
        Title="Ejercicio2" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Ejercicio2" Foreground="Red"/>
            <CheckBox x:Name="checkbox1" Content="Nombre" IsChecked="True" Click="Click1" />
            <CheckBox x:Name="checkbox2" Content="Apellido" IsChecked="True" Click="Click2"/>
         
            <StackPanel Orientation="Horizontal">
                <Label Name="label1" Content="Hugo"/>
                <Label Name="label2" Content="Diaz"/>
            </StackPanel>
        </StackPanel>
        
        
    </Grid>
</Window>
