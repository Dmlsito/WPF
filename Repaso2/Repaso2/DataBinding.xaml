<Window x:Class="Repaso2.DataBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Repaso2"
        mc:Ignorable="d"
        Title="DataBinding" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center">
        <TextBox Name = "Area1" Width = "100" Margin = "5" Text = ""></TextBox>
        <TextBox Name = "Area2" Width = "100" Margin = "5" Text = "{Binding ElementName = Area1, Path = Text, Mode = OneWay}"></TextBox>
    </StackPanel>
</Window>
