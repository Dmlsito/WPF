<Window x:Class="Repaso2.ControlesHijo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Repaso2"
        mc:Ignorable="d"
        Title="ControlesHijo" Height="450" Width="800">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType = "Button">
                <Setter Property= "Foreground" Value = "Aqua"></Setter>
                <Setter Property= "Background" Value = "Blue"></Setter>
                <Setter Property= "BorderBrush" Value = "DarkBlue"></Setter>
                <Setter Property= "BorderThickness" Value = "2"></Setter>
                <Setter Property = "Width" Value = "400"></Setter>
                <Setter Property = "Height" Value = "100"></Setter>
            </Style>
        </StackPanel.Resources>
        <Button Content = "Este es el boton 1"></Button>
        <Button Content = "Este es el boton 2"></Button>
        <Button Content = "Este es el boton 3"></Button>
        <Button Content = "Este es el boton 4"></Button>
        <Button Content = "Este es el boton 5"></Button>
        <Button Content = "Este es el boton 6"></Button>
        </StackPanel>
</Window>
